<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="360.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.AdminMenuController">
   <children>
      <Button fx:id="movieRegistrationButton" layoutX="77.0" layoutY="105.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="영화 등록" onAction="#handleMovieRegistration"/>
      <Label layoutX="77.0" layoutY="56.0" style="-fx-font-weight: bold;" text="관리자 메뉴" textAlignment="CENTER">
         <font>
            <Font name="Malgun Gothic" size="18.0" />
         </font>
      </Label>
      <Button fx:id="screeningInfoButton" layoutX="77.0" layoutY="149.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="상영 정보 관리" onAction="#handleScreeningInfo"/>
      <Button fx:id="salesCheckButton" layoutX="77.0" layoutY="190.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="매출 확인" onAction="#handleSalesCheck"/>
      <Button fx:id="exitButton" layoutX="77.0" layoutY="232.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="프로그램 종료" onAction="#handleExit"/>
   </children>
</AnchorPane>
